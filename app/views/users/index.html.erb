<h1 class="text-center">List of users</h1>

<div class="text-center">
  <%= will_paginate %>
</div>

<div class="text-center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user),user_path(user) %></li>
          <li class="article-title"><h3><%= link_to user.username, user_path(user) %></h3></li>
          <li><%= user.email %></li>
          <% if logged_in? and current_user.admin? %>
            <li>
              <%= link_to "Delete", 
                user_path(user), 
                method: :delete, 
                data: { confirm: 'Are you sure?' }, 
                class: "btn btn-danger" 
              %>
            </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>

<div class="text-center">
  <%= will_paginate %>
</div>